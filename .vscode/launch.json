            "type": "node",
            "request": "launch",
            "name": "Jest",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": ["-i"],
            "skipFiles": ["<node_internals>/**/*.js", "node_modules"]
        }
    ]
}
